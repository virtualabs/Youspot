<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="fill_parent"
	android:background="#F0F0F0"
	android:layout_width="fill_parent"
	android:gravity="bottom">
	<LinearLayout
		android:id="@+id/keylayout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/lblSSID"
			android:text="test"
			android:textColor="#EEE"
			android:textSize="25sp"
			android:textStyle="bold"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12sp"
			android:background="#000">
		</TextView>	
	</LinearLayout>
	<TextView
		android:id="@+id/lblKey"
		android:textColor="#000"
		android:text="Key"
		android:background="#D0D0D0"
		android:textSize="20sp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
	</TextView>
	<ScrollView
		android:layout_weight="1"
		android:id="@+id/ScrollView01"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
	<TextView
		android:id="@+id/spotkey"
		android:textColor="#000"
		android:textSize="20sp"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
	</TextView>
</ScrollView>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:layout_marginBottom="10sp">
<ImageView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:id="@+id/status"
	android:layout_marginLeft="5sp"
	android:layout_marginRight="5sp"
	android:src="@drawable/disconnect">
</ImageView>
<TextView
	android:id="@+id/currentAction"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text=""
	android:textSize="25sp"
	android:layout_gravity="center_vertical"
	android:textColor="#000"
	android:layout_weight="1">
</TextView>
</LinearLayout>
<LinearLayout
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content" android:orientation="horizontal">
    <Button
    	android:id="@+id/btnConnect"
    	android:layout_weight="1"
    	android:layout_height="wrap_content"
    	android:layout_gravity="right"
    	android:layout_width="wrap_content"
    	android:text="Connect" android:layout_centerHorizontal="true" />
    <Button
    	android:id="@+id/btnCancel"
    	android:layout_weight="1"
    	android:layout_toRightOf="@id/btnConnect"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_gravity="right"
    	android:text="Cancel" android:layout_centerHorizontal="true" />

</LinearLayout>


</LinearLayout>
